<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame Animation"
        android:id="@+id/b_frameAnimation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:onClick="frameAnimation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tween Animation"
        android:id="@+id/b_tweenAnimation"
        android:onClick="tweenAnimation"
        android:layout_below="@+id/b_frameAnimation"
        android:layout_alignLeft="@+id/b_frameAnimation"
        android:layout_alignStart="@+id/b_frameAnimation"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_propertyAnimation"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="propertyAnimation"
        android:text="Property Animation"
        android:layout_below="@+id/b_tweenAnimation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/b_tweenAnimation"
        android:layout_alignStart="@+id/b_tweenAnimation" />

</RelativeLayout>
