<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrameAnimation"
            android:label="@string/title_activity_frame_animation" >
        </activity>
        <activity
            android:name=".TweenAnimation"
            android:label="@string/title_activity_tween_animation" >
        </activity>
        <activity
            android:name=".PropertyAnimation"
            android:label="@string/title_activity_property_animation" >
        </activity>
    </application>

</manifest>
